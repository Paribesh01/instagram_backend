generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id              String           @id @default(uuid())
  email           String           @unique
  username        String           @unique
  password        String
  posts           Post[]           @relation("created")
  likedPost       Post[]           @relation("Likes")
  comments        Comment[]        @relation("commented")
  userPreferences UserPreferences?
  followedBy      User[]           @relation("UserFollows")
  following       User[]           @relation("UserFollows")
}

model Post {
  id        String    @id @default(uuid())
  content   String
  imgUrl    String?
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  likes     User[]    @relation("Likes")
  author    User      @relation("created", fields: [authorId], references: [id])
  authorId  String
  Comment   Comment[]
}

model Comment {
  id            String @id @default(uuid())
  content       String
  commentedBy   User?  @relation("commented", fields: [commentUserId], references: [id])
  commentUserId String
  Post          Post?  @relation(fields: [postId], references: [id])
  postId        String
}

enum AccountType {
  PUBLIC
  PRIVATE
}

enum Gender {
  MALE
  FEMALE
  OTHERS
}

model UserPreferences {
  id          String      @id @default(uuid())
  bio         String?
  website     String?
  gender      Gender      @default(MALE)
  accountType AccountType @default(PUBLIC)
  user        User        @relation(fields: [userId], references: [id])
  userId      String      @unique
  imageUrl    String?
}
